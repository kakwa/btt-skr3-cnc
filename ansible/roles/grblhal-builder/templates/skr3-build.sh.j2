#!/bin/bash
# SKR3 Build Script
# Target: {{ grblhal_board }} ({{ grblhal_mcu }})

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SOURCE_DIR="{{ grblhal_source_dir }}"
BUILD_DIR="{{ grblhal_build_dir }}"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}======================================${NC}"
echo -e "${GREEN}SKR3 Build Script${NC}"
echo -e "${GREEN}Target Board: {{ grblhal_board }}${NC}"
echo -e "${GREEN}MCU: {{ grblhal_mcu }}${NC}"
echo -e "${GREEN}======================================${NC}"
echo

# Check if source directory exists
if [ ! -d "$SOURCE_DIR" ]; then
    echo -e "${RED}ERROR: Source directory not found: $SOURCE_DIR${NC}"
    exit 1
fi

cd "$SOURCE_DIR"

# Create build directory if it doesn't exist
if [ ! -d "$BUILD_DIR" ]; then
    echo -e "${YELLOW}Creating build directory: $BUILD_DIR${NC}"
    mkdir -p "$BUILD_DIR"
fi

# Check if platformio.ini exists
if [ ! -f "platformio.ini" ]; then
    echo -e "${RED}ERROR: platformio.ini not found in $SOURCE_DIR${NC}"
    exit 1
fi

# Workaround for ARM64 Linux: Create symlinks to system ARM toolchain
# PlatformIO doesn't provide pre-built toolchain packages for linux_aarch64
TOOLCHAIN_DIR="$HOME/.platformio/packages/toolchain-gccarmnoneeabi"
if [ ! -d "$TOOLCHAIN_DIR/bin" ]; then
    echo -e "${YELLOW}Setting up system ARM toolchain for PlatformIO (ARM64 workaround)...${NC}"
    mkdir -p "$TOOLCHAIN_DIR/bin"

    # Create symlinks to system ARM GCC toolchain
    for f in /usr/bin/arm-none-eabi-*; do
        if [ -f "$f" ]; then
            ln -sf "$f" "$TOOLCHAIN_DIR/bin/"
        fi
    done

    # Create package.json to mark toolchain as installed
    cat > "$TOOLCHAIN_DIR/package.json" << 'PKGJSON'
{
  "name": "toolchain-gccarmnoneeabi",
  "version": "1.70301.0",
  "description": "System ARM GCC toolchain (symlinked)",
  "keywords": ["toolchain", "build tools", "compiler", "assembler", "linker", "preprocessor"],
  "homepage": "https://developer.arm.com/tools-and-software/open-source-software/developer-tools/gnu-toolchain/gnu-rm",
  "license": "GPL-2.0-or-later",
  "system": "*"
}
PKGJSON

    echo -e "${GREEN}System ARM toolchain linked successfully${NC}"
fi

echo -e "${GREEN}Building with PlatformIO...${NC}"
platformio run "$@"

# Find the firmware binary
FIRMWARE=$(find .pio/build -name "*.bin" | head -n 1)
if [ -n "$FIRMWARE" ]; then
    echo -e "${GREEN}Build successful!${NC}"
    echo -e "${GREEN}Firmware: $FIRMWARE${NC}"

    # Copy to build directory with timestamp
    TIMESTAMP=$(date +%Y%m%d_%H%M%S)
    cp "$FIRMWARE" "$BUILD_DIR/firmware_${TIMESTAMP}.bin"
    cp "$FIRMWARE" "$BUILD_DIR/firmware_latest.bin"
    echo -e "${GREEN}Firmware copied to: $BUILD_DIR/firmware_latest.bin${NC}"
else
    echo -e "${RED}ERROR: Firmware binary not found after build${NC}"
    exit 1
fi

echo
echo -e "${GREEN}======================================${NC}"
echo -e "${GREEN}Build Complete!${NC}"
echo -e "${GREEN}======================================${NC}"
