#!/bin/bash
# SKR3 Flash Script
# Target: {{ grblhal_board }} ({{ grblhal_mcu }})
# Flash Tool: stlink-tools

set -e

BUILD_DIR="{{ grblhal_build_dir }}"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}======================================${NC}"
echo -e "${GREEN}SKR3 Flash Script${NC}"
echo -e "${GREEN}Target Board: {{ grblhal_board }}${NC}"
echo -e "${GREEN}MCU: {{ grblhal_mcu }}${NC}"
echo -e "${GREEN}Flash Tool: stlink-tools${NC}"
echo -e "${GREEN}======================================${NC}"
echo

# Determine firmware file
if [ -n "$1" ]; then
    FIRMWARE="$1"
    if [ ! -f "$FIRMWARE" ]; then
        echo -e "${RED}ERROR: Specified firmware file not found: $FIRMWARE${NC}"
        exit 1
    fi
else
    FIRMWARE="$BUILD_DIR/firmware_latest.bin"
    if [ ! -f "$FIRMWARE" ]; then
        echo -e "${RED}ERROR: No firmware found at: $FIRMWARE${NC}"
        echo -e "${YELLOW}Please build the firmware first or specify a firmware file.${NC}"
        echo -e "${YELLOW}Usage: $0 [firmware.bin]${NC}"
        exit 1
    fi
fi

echo -e "${GREEN}Firmware: $FIRMWARE${NC}"
echo

# Check firmware size
SIZE=$(stat -f%z "$FIRMWARE" 2>/dev/null || stat -c%s "$FIRMWARE" 2>/dev/null)
echo -e "${GREEN}Firmware size: $SIZE bytes ($(($SIZE / 1024)) KB)${NC}"
echo

# Flash with st-flash (stlink-tools)
echo -e "${YELLOW}Flashing with st-flash...${NC}"
echo -e "${YELLOW}Make sure ST-Link is connected!${NC}"
echo

# Check if st-flash is available
if ! command -v st-flash &> /dev/null; then
    echo -e "${RED}ERROR: st-flash not found. Please install stlink-tools.${NC}"
    exit 1
fi

# Flash address for STM32H7xx
FLASH_ADDR="0x08000000"

echo -e "${GREEN}Starting flash operation...${NC}"
st-flash --reset write "$FIRMWARE" "$FLASH_ADDR"

if [ $? -eq 0 ]; then
    echo
    echo -e "${GREEN}======================================${NC}"
    echo -e "${GREEN}Flash Complete!${NC}"
    echo -e "${GREEN}======================================${NC}"
    echo -e "${YELLOW}The board should now reset and run the new firmware.${NC}"
else
    echo
    echo -e "${RED}======================================${NC}"
    echo -e "${RED}Flash Failed!${NC}"
    echo -e "${RED}======================================${NC}"
    echo -e "${YELLOW}Check ST-Link connection and try again.${NC}"
    exit 1
fi
